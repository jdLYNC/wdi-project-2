<main class="container index-box">
  <div class="row">
    <div clas="col">
      <h1>Rocket Index</h1>
    </div>
  </div>
  <div class="row img-index">
    <% rockets.forEach(rocket => { %>
      <div class="col-lg-4 col-md-6 col-sm-12">
        <a href="/rockets/<%= rocket.id %>"><h3><%= rocket.name %></h3>
          <div class="index-img" style="background-image: url(<%= rocket.image.url %>)">
            <% if(locals.isAuthenticated) { %>
              <form method="POST" action="/rockets/<%= rocket.id %>/favorite" class="favorite">
                <button>
                  <% if(locals.currentUser.hasFavorited(rocket)) { %>
                    <i class="fa fa-star" aria-hidden="true"></i>
                  <% } else { %>
                    <i class="fa fa-star-o" aria-hidden="true"></i>
                  <% } %>
                </button>
              </form>
            <% } %>
          </div>
        </a>
      </div>
    <% }) %>
  </div>
</main>
